	<title>Vector Addition: Exercises </title>
	<caption>Vector Addition: Exercises</caption>
	
	<exercise>
		<problem>
			<para>Find the following vector sums:</para>
		</problem>
		<part>
			<problem>
				<para><latex>(3,-1,6) + (-1,2,-1)</latex></para>
			</problem>
			<approach>
				<solution>
					<computation>
						<left>(3,-1,6) + (-1,2,-1)</left>
						<center>=</center>
						<right>(3+(-1),-1+2,6+(-1))</right>
						<left></left>
						<center>=</center>
						<right>(2,1,5)</right>
					</computation>
				</solution>
			</approach>
		</part>
		
		<part>
			<problem>
				<para>
					<latex>(16,1,0,7) + (21,-9,-17,6)</latex>
				</para>
			</problem>
			<approach>
				<solution>
					<computation>
						<left>(16,1,0,7) + (21,-9,-17,6)</left>
						<center>=</center>
						<right>(16-21,1+(-9),0+(-17),7+6)</right>
						<left></left>
						<center>=</center>
						<right>(37,-8,-17,13)</right>
					</computation>
				</solution>
			</approach>
		</part>
		
		<part>
			<problem>
				<para>
					<latex>(12,-6,-5,3,2) - (-3,7,-5,4,-1)</latex>
				</para>
			</problem>
			<approach>
				<solution>
					<computation>
						<left>(12,-6,-5,3,2) - (-3,7,-5,4,-1)</left>
						<center>=</center>
						<right>(12-(-3),-6-7,-5-(-5),3-4,2-(-1))</right>
						<left></left>
						<center>=</center>
						<right>(15,-13,0,-1,3)</right>
					</computation>
				</solution>
			</approach>
		</part>
		
		<part>
			<problem><para><latex>(21,6,9,3,1) + (4,-2,0,1,3) + (12,-15,7,3,-1)</latex></para></problem>
		</part>
		
		<part>
			<problem><para><latex>(-1,-4,16,1) + (3,7,-12,-4) + (8,3,-2,-11)</latex></para></problem>
		</part>
	</exercise>	
