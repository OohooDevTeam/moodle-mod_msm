<theorem xmlns="Theorem"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         type="Lemma"
         id="Thm_InfSupExists"
         xsi:schemaLocation="Theorem file:/C:/xampp/htdocs/moodle/mod/msm/NewSchemas/Theorem.xsd">
   <caption>Existence of unique least upper / greatest lower bound</caption>
   <statement.theorem>
      <para>
         <para.body>For <math>
               <latex>A\subseteq \RNr</latex>
            </math> the following hold:</para.body>
      </para>
      <part.theorem partid="SupExists">
         <part.body>
            <para>
               <para.body>There exists a unique <math>
                     <latex>s\in \bar{\RNr}</latex>
                  </math> satisfying <math>
                     <latex>s\leq u</latex>
                  </math> for all <math>
                     <latex>u\in \bar{\RNr}</latex>
                  </math> with <math>
                     <latex>A\leq u</latex>
                  </math>. Moreover, <math>
                     <latex>s\in \RNr</latex>
                  </math> if and only if <math>
                     <latex>A</latex>
                  </math> has an upper bound in <math>
                     <latex>\RNr</latex>
                  </math> and <math>
                     <latex>A\neq \emptyset</latex>
                  </math>.</para.body>
            </para>
         </part.body>
      </part.theorem>
      <part.theorem partid="InfExists">
         <part.body>
            <para>
               <para.body>There exists a unique <math>
                     <latex>i\in\RNr</latex>
                  </math> satisfying <math>
                     <latex>l\leq i</latex>
                  </math> for all <math>
                     <latex>l\in\bar{\RNr}</latex>
                  </math> with <math>
                     <latex>l\leq A</latex>
                  </math>.</para.body>
            </para>
         </part.body>
      </part.theorem>
   </statement.theorem>
