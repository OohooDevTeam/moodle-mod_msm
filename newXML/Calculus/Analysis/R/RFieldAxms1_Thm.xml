   <caption>Further properties of <math>
         <latex>(\RNr,+,\cdot)</latex>
      </math>
   </caption>
   <statement.theorem>
      <para>
         <para.body>The following hold:</para.body>
      </para>
      <part.theorem partid="AdditiveEquationSolve">
         <part.body>
            <para>
               <para.body>
                  <math>
                     <latex>a + x = a + y</latex>
                  </math> if and only if <math>
                     <latex>x=y</latex>
                  </math> for all <math>
                     <latex>a,x,y\in \RNr</latex>
                  </math>.</para.body>
            </para>
         </part.body>
      </part.theorem>
      <part.theorem partid="Times0">
         <part.body>
            <para>
               <para.body>
                  <math>
                     <latex>0\cdot a = 0</latex>
                  </math> for all <math>
                     <latex>a\in \RNr</latex>
                  </math>.</para.body>
            </para>
         </part.body>
      </part.theorem>
      <part.theorem partid="Negativea">
         <part.body>
            <para>
               <para.body>
                  <math>
                     <latex>-a = (-1)\cdot a</latex>
                  </math> for all <math>
                     <latex>a\in \RNr</latex>
                  </math>
               </para.body>
            </para>
         </part.body>
      </part.theorem>
   </statement.theorem>
