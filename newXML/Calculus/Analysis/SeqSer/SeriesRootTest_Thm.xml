   </associate>
   <statement.theorem>
      <para>
         <para.body>Let <math>
               <latex>(a_n)</latex>
            </math> be a sequence in <math>
               <latex>\RNr</latex>
            </math>.
			</para.body>
         <index.glossary>
            <term>root test</term>
         </index.glossary>
      </para>
      <part.theorem partid="LessThan1">
         <part.body>
            <para>
               <para.body>If <math>
                     <latex> \lim_{n\to \infty} \sqrt[n]{\Abs{a_n}}=L &lt; 1</latex>
                  </math>, then <math>
                     <latex>\sum_{n=0}^{\infty}a_n</latex>
                  </math> converges absolutely.</para.body>
            </para>
         </part.body>
      </part.theorem>
      <part.theorem partid="GreaterThan1">
         <part.body>
            <para>
               <para.body>If <math>
                     <latex> \lim_{n\to \infty} \sqrt[n]{\Abs{a_n}}=L &gt; 1</latex>
                  </math>, then <math>
                     <latex>\sum_{n=0}^{\infty}a_n</latex>
                  </math> does not converge to a number.</para.body>
            </para>
         </part.body>
      </part.theorem>
   </statement.theorem>
