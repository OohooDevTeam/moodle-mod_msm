<exercise.pack xmlns="Compositor"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               id="Exe_SeriesLimitComparison"
               xsi:schemaLocation="Compositor file:/C:/xampp/htdocs/moodle/mod/msm/XSLTdocuments/Compositor.xsd">
	  <texsupport href="../Analysis_TeXSupport.xml"/>
	  <title>Exercises: Limit Comparison of Series</title>
	  <exercise>
		    <problem>
         <problem.body>
			         <para>
               <para.body>Analyze the convergence behavior of the following series.</para.body>
            </para>
		       </problem.body>
      </problem>
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>\sum_{n=1}^{\infty}(1/n^{1+\frac{1}{n}})</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <answer.exercise>
               <answer.exercise.block>
                  <answer.exercise.block.body>
					                <math.display>
						                  <latex>\sum_{n=1}^{\infty} \dfrac{1}{n^{1+\frac{1}{n}}}\ =\ \infty</latex>
					                </math.display>
				              </answer.exercise.block.body>
               </answer.exercise.block>
            </answer.exercise>
				        <solution.hint>
					          <para>
                  <para.body>Try a limit comparison with <math>
                        <latex>\sum_{n=1}^{\infty}(1/n)</latex>
                     </math>.</para.body>
               </para>
				        </solution.hint>
			      </approach>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>\sum_{n=3}^{\infty}\frac{1}{n^2 - n + 1}</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
		    </part.exercise>
		
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>\sum_{n=0}^{\infty}\frac{3}{n^2 +1}</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>\sum_{n=1}^{\infty}\frac{2+\sin n}{n^2 + n - 1}</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>\sum_{n=1}^{\infty}\frac{1}{\sqrt{n} + \sqrt{n + 1}}</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>\sum_{n=1}^{\infty}\frac{1}{n - \sqrt{n}}</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
		    </part.exercise>
	  </exercise>	
</exercise.pack>
