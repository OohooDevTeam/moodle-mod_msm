	  <exercise>
		    <problem>
         <problem.body>
			         <para>
               <para.body>Test each of the series below for convergence/divergence</para.body>
            </para>
		       </problem.body>
      </problem>
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>\sum_{n=0}^{\infty} \dfrac{n}{2^n}</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <answer.exercise>
               <answer.exercise.block>
                  <answer.exercise.block.body>
                     <para>
                        <para.body>This series converges absolutely</para.body>
                     </para>
                  </answer.exercise.block.body>
               </answer.exercise.block>
            </answer.exercise>
				        <solution>
               <solution.body>
					             <para>
                     <para.body>We use the ratio test</para.body>
                  </para>
					             <math.array column="3">
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\lim_{n\to\infty} \dfrac{ \Abs{ \dfrac{ n+1 }{ 2^{n+1} } } }{ \Abs{ \dfrac{ n }{ 2^n } } }</latex>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <text>=</text>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\lim_{n\to\infty} \dfrac{ (n+1)\cdot 2^n }{ n\cdot 2^{n+1} }</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <text>=</text>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\dfrac{1}{2}</latex>
                           </math>
                        </cell>
                     </row>
                  </math.array>
					             <para>
                     <para.body>So the series converges absolutely by the ratio test.</para.body>
                  </para>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>\sum_{n=0}^{\infty} \dfrac{n^2}{2^n}</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <answer.exercise>
               <answer.exercise.block>
                  <answer.exercise.block.body>
                     <para>
                        <para.body>This series converges absolutely</para.body>
                     </para>
                  </answer.exercise.block.body>
               </answer.exercise.block>
            </answer.exercise>
				        <solution>
               <solution.body>
					             <para>
                     <para.body>We use the ratio test</para.body>
                  </para>
					             <math.array column="3">
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\lim_{n\to\infty} \dfrac{ \Abs{ \dfrac{ (n+1)^2 }{ 2^{n+1} } } }{ \Abs{ \dfrac{ n^2 }{ 2^n } } }</latex>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <text>=</text>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\lim_{n\to\infty} \dfrac{ (n+1)^2 }{ n^2 } \cdot \dfrac{ 2^n }{ 2^{n+1} }</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <text>=</text>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\lim_{n\to\infty} \left( \dfrac{ n+1 }{ n } \right)^2 \cdot \lim_{n\to\infty} \dfrac{ 2^n }{ 2^{n+1} }</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <text>=</text>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\dfrac{1}{2}</latex>
                           </math>
                        </cell>
                     </row>
                  </math.array>
					             <para>
                     <para.body>So the series converges absolutely by the ratio test.</para.body>
                  </para>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>For an integer <math>
                        <latex>k\geq 1</latex>
                     </math>,   <math>
                        <latex>\sum_{n=0}^{\infty} \dfrac{n^k}{2^n}</latex>
                     </math> 
                  </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <answer.exercise>
               <answer.exercise.block>
                  <answer.exercise.block.body>
                     <para>
                        <para.body>This series converges absolutely</para.body>
                     </para>
                  </answer.exercise.block.body>
               </answer.exercise.block>
            </answer.exercise>
				        <solution.hint>
               <para>
                  <para.body>Review the solution of the previous problem.</para.body>
               </para>
            </solution.hint>
			      </approach>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>\sum_{n=0}^{\infty} \dfrac{ (-1)^{n+1} }{ \sqrt{n+1} }</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <answer.exercise>
               <answer.exercise.block>
                  <answer.exercise.block.body>
                     <para>
                        <para.body>The series converges conditionally</para.body>
                     </para>
                  </answer.exercise.block.body>
               </answer.exercise.block>
            </answer.exercise>
				        <solution>
               <solution.body>
					             <para>
                     <para.body>This series is alternating, and</para.body>
                  </para>
					             <math.array column="3">
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\lim_{n\to\infty}\Abs{ \dfrac{ (-1)^{n+1} }{ \sqrt{n+1} } }</latex>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <text>=</text>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\lim_{n\to\infty} \dfrac{ 1 }{ \sqrt{n+1} }</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <text/>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>0</latex>
                           </math>
                        </cell>
                     </row>
                  </math.array>
					             <para>
                     <para.body>So the alternating series test tells us that this series converges to a number. – There remains the question: Does it converge absolutely?</para.body>
                  </para>
					             <para>
                     <para.body>The answer is ‘no’. Reason:</para.body>
                  </para>
					             <math.display>
						               <latex>
							
\Abs{ \dfrac{ (-1)^{n+1} }{ \sqrt{n+1} } } = \dfrac{ 1 }{ \sqrt{n+1} } \geq \dfrac{1}{n+1}
							
						</latex>
					             </math.display>
					             <para>
                     <para.body>So the series of absolute values converges to <math>
                           <latex>+\infty</latex>
                        </math> by comparison with the harmonic series <math>
                           <latex>\sum_{n=0}^{\infty}\frac{1}{n+1}</latex>
                        </math>.</para.body>
                  </para>
					             <para>
                     <para.body>You may also abserve that both the root and the ratio test are inconclusive for this series.</para.body>
                  </para>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>\sum_{n=0}^{\infty} \dfrac{1}{n!}</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <answer.exercise>
               <answer.exercise.block>
                  <answer.exercise.block.body>
                     <para>
                        <para.body>This series converges absolutely</para.body>
                     </para>
                  </answer.exercise.block.body>
               </answer.exercise.block>
            </answer.exercise>
				        <solution.hint>
               <para>
                  <para.body>Try the ratio test.</para.body>
               </para>
            </solution.hint>
				        <solution>
               <solution.body>
					             <para>
                     <para.body>We use the ratio test:</para.body>
                  </para>
					             <math.array column="3">
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\lim_{n\to\infty} \dfrac{ \dfrac{1}{(n+1)!} }{ \dfrac{1}{n!} }</latex>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <text>=</text>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\lim_{n\to\infty} \dfrac{ 1 }{ n+1}</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <text>=</text>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>0</latex>
                           </math>
                        </cell>
                     </row>
                  </math.array>
					             <para>
                     <para.body>So the series converges absolutely by the ratio test.</para.body>
                  </para>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
		
