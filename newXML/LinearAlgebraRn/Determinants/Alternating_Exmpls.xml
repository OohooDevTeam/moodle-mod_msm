	  <texsupport href="../LinearAlgebraTeXSupport.xml"/>
	
	  <title>Alternating Property of Determinants: Examples</title>
	
	  <showme>
		    <statement.showme>
			      <para>
            <para.body>The alternating property of determinants says that interchanging two columns in a matrix changes the sign of its determinant. Therefore</para.body>
         </para>
			      <math.display>
				        <latex>
					
\det
\left[
\begin{array}{rr}
3 &amp; 7 \\
9 &amp; 1
\end{array}
\right] = 
- \det
\left[
\begin{array}{rr}
7 &amp; 3 \\
1 &amp; 9
\end{array}
\right]

				</latex>
			      </math.display>
		    </statement.showme>
	  </showme>
	
	  <showme>
		    <statement.showme>
         <para>
            <para.body>Similarly</para.body>
         </para>
		       <math.display>
			         <latex>
				
\aligned
\det
\left[
\begin{array}{rrr}
1 &amp; 5 &amp; 2 \\
2 &amp; 3 &amp; 4 \\
7 &amp; 1 &amp; 6
\end{array}
\right]\ &amp;=\  
- \det
\left[
\begin{array}{rrr}
5 &amp; 1 &amp; 2 \\
3 &amp; 2 &amp; 4 \\
1 &amp; 7 &amp; 6
\end{array}
\right]\ &amp;=\  
\det
\left[
\begin{array}{rrr}
2 &amp; 1 &amp; 5 \\
4 &amp; 2 &amp; 3 \\
6 &amp; 7 &amp; 1
\end{array}
\right] \\
	&amp;=\ 
	- \det
\left[
\begin{array}{rrr}
2 &amp; 5 &amp; 1 \\
4 &amp; 3 &amp; 2 \\
6 &amp; 1 &amp; 7
\end{array}
\right]\ &amp;=\ \det
\left[
\begin{array}{rrr}
5 &amp; 2 &amp; 1 \\
3 &amp; 4 &amp; 2 \\
1 &amp; 6 &amp; 7
\end{array}
\right]
\endaligned

			</latex>
		       </math.display>
		    </statement.showme>
	  </showme>
</showme.pack>
