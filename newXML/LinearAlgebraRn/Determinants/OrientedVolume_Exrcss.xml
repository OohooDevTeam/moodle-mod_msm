	  <exercise>
		    <problem>
         <problem.body>
			         <para>
               <para.body>Given the vectors <math>
                     <latex>\Vect{x}=(1,3)</latex>
                  </math> and <math>
                     <latex>\Vect{y}=(2,4)</latex>
                  </math> in <math>
                     <latex>\RNr[2]</latex>
                  </math>, do the following.</para.body>
            </para>
		       </problem.body>
      </problem>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>Find the oriented area of the parallelogram spanned by <math>
                        <latex>(\Vect{x},\Vect{y})</latex>
                     </math>.</para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <answer.exercise>
               <answer.exercise.block>
                  <answer.exercise.block.body>
					                <para>
                        <para.body>The oriented area is</para.body>
                     </para>
					                <math.display>
                        <latex>\OriVol(\Vect{x},\Vect{y}) = -2</latex>
                     </math.display>
				              </answer.exercise.block.body>
               </answer.exercise.block>
            </answer.exercise>
				        <solution>
               <solution.body>
					             <para>
                     <para.body>The oriented area of the parallelogram spanned by <math>
                           <latex>(\Vect{x},\Vect{y})</latex>
                        </math> is</para.body>
                  </para>
					             <math.display>
						               <latex>
							
\OriVol(\Vect{x},\Vect{y}) = \det
\left[
\begin{array}{rr}
1 &amp; 2 \\
3 &amp; 4
\end{array}
\right] = 1\cdot 4 - (2\cdot 3) = -2

						</latex>
					             </math.display>
					             <para>
                     <para.body>Since the oriented volume is negative, the pair <math>
                           <latex>(\Vect{x},\Vect{y})</latex>
                        </math> represents the clockwise or negative orientation of <math>
                           <latex>\RNr[2]</latex>
                        </math>.</para.body>
                  </para>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>Find the area of the parallelogram spanned by <math>
                        <latex>(\Vect{x},\Vect{y})</latex>
                     </math>.</para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <answer.exercise>
               <answer.exercise.block>
                  <answer.exercise.block.body>
					                <para>
                        <para.body>The area is</para.body>
                     </para>
					                <math.display>
                        <latex>\Vol(\Vect{x},\Vect{y}) = 2</latex>
                     </math.display>
				              </answer.exercise.block.body>
               </answer.exercise.block>
            </answer.exercise>
				        <solution>
               <solution.body>
					             <para>
                     <para.body>The area of the parallelogram spanned by <math>
                           <latex>(\Vect{x},\Vect{y})</latex>
                        </math> is</para.body>
                  </para>
					             <math.display>
						               <latex>
							
\Vol(\Vect{x},\Vect{y}) = \abs{ \det
\left[
\begin{array}{rr}
1 &amp; 2 \\
3 &amp; 4
\end{array}
\right] } = \abs{ 1\cdot 4 - (2\cdot 3) } = 2

						</latex>
					             </math.display>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
	  </exercise>
	
	
	
	
	
