	  <exercise>
		    <problem>
         <problem.body>
			         <para>
               <para.body>You are given the following four vectors in <math>
                     <latex>\RNr[4]</latex>
                  </math>.</para.body>
            </para>
		       </problem.body>
      </problem>
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>Find the volume of the slanted box spanned by the vectors <math>
                        <latex>\Vect{w}</latex>
                     </math>, <math>
                        <latex>\Vect{x}</latex>
                     </math>, <math>
                        <latex>\Vect{y}</latex>
                     </math>, and <math>
                        <latex>\Vect{z}</latex>
                     </math>.</para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <answer.exercise>
               <answer.exercise.block>
                  <answer.exercise.block.body>
					                <para>
                        <para.body>The required volume is</para.body>
                     </para>
					                <math.display>
						                  <latex>
							
\Vol(\Vect{w},\Vect{x},\Vect{y},\Vect{z}) = 
\abs{ \det
\left[
\begin{array}{rrrr}
2 &amp; 1 &amp; 1 &amp; 0 \\
0 &amp; 1 &amp; 6 &amp; -1 \\
0 &amp; -2 &amp; 2 &amp; 0 \\
1 &amp; 3 &amp; 0 &amp; 0
\end{array}
\right] } = \abs{ 8 } = 8

						</latex>
					                </math.display>
				              </answer.exercise.block.body>
               </answer.exercise.block>
            </answer.exercise>
			      </approach>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>What orientation of <math>
                        <latex>\RNr[4]</latex>
                     </math> does the quadruple of vectors <math>
                        <latex>(\Vect{x},\Vect{y},\Vect{z},\Vect{w})</latex>
                     </math> represent?</para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <answer.exercise>
               <answer.exercise.block>
                  <answer.exercise.block.body>
                     <para>
                        <para.body>The given quadruple represents the negative orientation of <math>
                              <latex>\RNr[4]</latex>
                           </math>.</para.body>
                     </para>
                  </answer.exercise.block.body>
               </answer.exercise.block>
            </answer.exercise>
				        <solution>
               <solution.body>
					             <para>
                     <para.body>We compute</para.body>
                  </para>
					             <math.array column="3">
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>+1</latex>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\omega(\Vect{w},\Vect{x},\Vect{y},\Vect{z})</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>-\omega(\Vect{x},\Vect{w},\Vect{y},\Vect{z})</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\omega(\Vect{x},\Vect{y},\Vect{w},\Vect{z})</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>-\omega(\Vect{x},\Vect{y},\Vect{z},\Vect{w})</latex>
                           </math>
                        </cell>
                     </row>
                  </math.array>
					             <para>
                     <para.body>Therefore <math>
                           <latex>(\Vect{x},\Vect{y},\Vect{z},\Vect{w})</latex>
                        </math> represents the negative orientation of <math>
                           <latex>\RNr[4]</latex>
                        </math>.</para.body>
                  </para>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
