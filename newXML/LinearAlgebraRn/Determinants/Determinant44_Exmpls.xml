	  <texsupport href="../LinearAlgebraTeXSupport.xml"/>
	
	  <title>Determinant of a (4,4)-Matrix: Examples</title>
	
	  <showme>
		    <statement.showme>
			      <para>
            <para.body>Find the determinant of the <math>
                  <latex>(4,4)</latex>
               </math>-matrix</para.body>
         </para>
			      <math.display>
				        <latex>
					
\Mtrx{A} = 
\left[
\begin{array}{rrrr}
4 &amp; 1 &amp; 6 &amp; 5 \\
3 &amp; -2 &amp; -3 &amp; 2 \\
9 &amp; 2 &amp; 4 &amp; 7 \\
1 &amp; -9 &amp; -3 &amp; 1
\end{array}
\right]

				</latex>
			      </math.display>
		    </statement.showme>
		
		    <answer.showme type="Solution">
         <answer.showme.block>
            <answer.showme.block.body>
			            <para>
                  <para.body>We first compute the cofactors of the entries in the first column of <math>
                        <latex>\Mtrx{A}</latex>
                     </math>.</para.body>
               </para>
			
			            <math.display>
				              <latex>
					
\aligned
c_{11}(\Mtrx{A})\ &amp;=\ (-1)^{1+1}\cdot \det(\Mtrx{A}_{11}) \\
	&amp;=\ 1\cdot \det\, 
\left[
\begin{array}{rrr}
-2 &amp; -3 &amp; 2 \\
2 &amp; 4 &amp; 7 \\
-9 &amp; -3 &amp; 1
\end{array}
\right] \\
	&amp;=\ (-2)\cdot (4+21) - 2\cdot (-3+6) + (-9)\cdot (-21 -8) \\
	&amp;=\ 205
\endaligned

				</latex>
			            </math.display>
			
			            <math.display>
				              <latex>
					
\aligned
c_{21}(\Mtrx{A})\ &amp;=\ (-1)^{2+1}\cdot \det(\Mtrx{A}_{21}) \\
	&amp;=\ (-1)\cdot \det\, 
\left[
\begin{array}{rrr}
1 &amp; 6 &amp; 5 \\
2 &amp; 4 &amp; 7 \\
-9 &amp; -3 &amp; 1
\end{array}
\right] \\
	&amp;=\ (-1)\cdot \left( (4 + 21) - (12-30) + (-9)\cdot (42- 20)  \right) \\
	&amp;=\ 215
\endaligned

				</latex>
			            </math.display>
			
			            <math.display>
				              <latex>
					
\aligned
c_{31}(\Mtrx{A})\ &amp;=\ (-1)^{3+1}\cdot \det(\Mtrx{A}_{31}) \\
	&amp;=\ 1\cdot \det\, 
\left[
\begin{array}{rrr}
1 &amp; 6 &amp; 5 \\
-2 &amp; -3 &amp; 2 \\
-9 &amp; -3 &amp; 1
\end{array}
\right] \\
	&amp;=\ (-3+6) -(-12-30) + (-9)(12+15) \\
	&amp;=\ -198
\endaligned

				</latex>
			            </math.display>
			
			            <math.display>
				              <latex>
					
\aligned
c_{41}(\Mtrx{A})\ &amp;=\ (-1)^{4+1}\cdot \det(\Mtrx{A}_{41}) \\
	&amp;=\ (-1)\cdot \det\, 
\left[
\begin{array}{rrr}
1 &amp; 6 &amp; 5 \\
-2 &amp; -3 &amp; 2 \\
2 &amp; 4 &amp; 7
\end{array}
\right] \\
	&amp;=\ (-1)\cdot \left( (-21-8) - (-2)\cdot (42 - 20) + 2\cdot (12-(-15)) \right) \\
	&amp;=\ -69
\endaligned

				</latex>
			            </math.display>
			
			            <para>
                  <para.body>Therefore</para.body>
               </para>
			
			            <math.display>
				              <latex>
					
\aligned
\det(\Mtrx{A})\ &amp;=\  
\det\, \left[
\begin{array}{rrrr}
{\color{red} 4} &amp; 1 &amp; 6 &amp; 5 \\
{\color{red} 3} &amp; -2 &amp; -3 &amp; 2 \\
{\color{red} 9} &amp; 2 &amp; 4 &amp; 7 \\
{\color{red} 1} &amp; -9 &amp; -3 &amp; 1
\end{array}
\right] \\
	&amp;=\ {\color{red} 4}\cdot c_{11}(\Mtrx{A}) + {\color{red} 3}\cdot c_{21}(\Mtrx{A}) + {\color{red} 9}\cdot c_{31}(\Mtrx{A}) + {\color{red} 1}\cdot c_{41}(\Mtrx{A}) \\
	&amp;=\ {\color{red} 4}\cdot 205 + {\color{red} 3}\cdot 215 + {\color{red} 9}\cdot (-198) + {\color{red} 1}\cdot (-69) \\
	&amp;=\ -386
\endaligned

				</latex>
			            </math.display>
		          </answer.showme.block.body>
         </answer.showme.block>
      </answer.showme>
	  </showme>
