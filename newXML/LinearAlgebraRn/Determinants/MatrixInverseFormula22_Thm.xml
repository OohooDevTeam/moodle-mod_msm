   <caption>Inverse of a (2,2)-matrix</caption>
   <associate type="Example">
      <showme.pack.ref showmePackID="Exa_Inverse22Matrix"/>
      <info>
         <para>
            <para.body>An example of inverting a <math>
                  <latex>(2,2)</latex>
               </math>-matrix</para.body>
         </para>
      </info>
   </associate>
   <statement.theorem>
      <para>
         <para.body>An invertible <math>
               <latex>(2,2)</latex>
            </math>-matrix
			</para.body>
         <index.glossary>
            <term>inverse</term>
            <term>of a <math>
                  <latex>(2,2)</latex>
               </math>-matrix</term>
            <info>
               <info.caption>Inverse of a <math>
                     <latex>(2,2)</latex>
                  </math>-matrix</info.caption>
               <para>
                  <para.body>An invertible <math>
                        <latex>(2,2)</latex>
                     </math>-matrix</para.body>
               </para>
               <math.display>
                  <latex>
							
\Mtrx{A} = 
\left[
\begin{array}{cc}
a &amp; b \\
c &amp; d
\end{array}
\right]\quad \text{has}\quad
\Mtrx{A}^{-1} = \dfrac{1}{\det(\Mtrx{A})}
\left[
\begin{array}{rr}
d &amp; -b \\
-c &amp; a
\end{array}
\right]

						</latex>
               </math.display>
