					             <math.array column="3">
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\DotPr{ (2,5,-1) }{ \left((3,1,1) + (2,-3,4)\right) }</latex>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\DotPr{ (2,5,-1) }{ (5,-2,5) }</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>10 -10 -5</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>-5</latex>
                           </math>
                        </cell>
                     </row>
                  </math.array>
					             <para>
                     <para.body>Computation of the right hand side</para.body>
                  </para>
					             <math.array column="3">
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>\DotPr{ (2,5,-1) }{ (3,1,1) } + \DotPr{ (2,5,-1) }{ (2,-3,4) }</latex>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>(6+5-1)\ +\ (4-15-4)</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>-5</latex>
                           </math>
                        </cell>
                     </row>
                  </math.array>
					             <para>
                     <para.body>So both sides are equal as expected.</para.body>
                  </para>
