      <unit unitid="Subsec_AdditionVectors">
         <titles>
            <title>Addition of Vectors</title>
            <plain.title>Addition</plain.title>
         </titles>
         <body>
            <block>
               <block.body>
                  <def type="Definition" id="Def_VectorAddition">
                     <caption>Addition of Vectors</caption>
                     <associate type="Illustration">
                        <showme.pack.ref showmePackID="Exa_VectorAddition"/>
                        <info>
                           <info.caption>Illustration of vector addition</info.caption>
                           <para>
                              <para.body>The addition of vectors has a useful geometric interpretation: it corresponds to the concatenation of representing arrows.</para.body>
                           </para>
                        </info>
                     </associate>
                     <def.body>
                        <para>
                           <para.body>The sum of vectors <math>
                                 <latex>\Vect{x}=(x_1,\dots ,x_n)</latex>
                              </math> and <math>
                                 <latex>\Vect{y}=(y_1,\dots ,y_n)</latex>
                              </math> in <math>
                                 <latex>\RNr[n]</latex>
                              </math> is </para.body>
                           <index.glossary>
                              <term>vector</term>
                              <term>addition</term>
                              <info>
                                 <math.display>
                                    <latex>(x_1,\dots ,x_n)\ +\ (y_1,\dots ,y_n)\ :=\ (x_1+y_1,\, \dots\, ,x_n+y_n)</latex>
                                 </math.display>
                                 <para>
                                    <para.body>Click to jump to the definition</para.body>
                                 </para>
                              </info>
                           </index.glossary>
                           <index.glossary>
                              <term>vector</term>
                              <term>sum</term>
                              <info>
                                 <math.display>
                                    <latex>(x_1,\dots ,x_n)\ +\ (y_1,\dots ,y_n)\ :=\ (x_1+y_1,\, \dots\, ,x_n+y_n)</latex>
                                 </math.display>
                                 <para>
                                    <para.body>Click to jump to the definition</para.body>
                                 </para>
                              </info>
                           </index.glossary>
                           <index.glossary>
                              <term>addition</term>
                              <term>of vectors</term>
                              <info>
                                 <math.display>
                                    <latex>(x_1,\dots ,x_n)\ +\ (y_1,\dots ,y_n)\ :=\ (x_1+y_1,\, \dots\, ,x_n+y_n)</latex>
                                 </math.display>
                                 <para>
                                    <para.body>Click to jump to the definition</para.body>
                                 </para>
                              </info>
                           </index.glossary>
                        </para>
                        <math.display>
                           <latex>
						
						\aligned
						\Vect{x}\ +\ \Vect{y}\ =\ (x_1,\dots ,x_n)\ +\ (y_1,\dots ,y_n) \\
						:=\ (x_1+y_1,\, \dots\, ,x_n+y_n)
						\endaligned
						
					</latex>
                        </math.display>
                     </def.body>
                  </def>
               </block.body>
            </block>
         </body>
