		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
					                <math>
                        <latex>\left( (2,5) + 3\cdot(-1,6) \right)\ -\ 2\cdot \left( (1,1) + (6,-5) \right)</latex>
                     </math>
				              </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <solution>
               <solution.body>
					             <math.display>
						               <latex>
							
\aligned
\left( (2,5) + 3(-1,6) \right)\ -\ 2\left( (1,1) + (6,-5) \right)\ &amp;=\ \left( (2,5) + (-3,18)\right) - 2\cdot (7,-4) \\
&amp; =\ (-1,23)\ +\ (-14,8) \\
&amp; =\ (-15,31)
\endaligned
							
						</latex>
					             </math.display>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
					                <math>
                        <latex>4\cdot \left( (3,0,-2)\ +\ 2( (-1,6,3)+(-5,-2,3)) \right)</latex>
                     </math>
				              </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <solution>
               <solution.body>
					             <math.display>
						               <latex>
							
\aligned
4\cdot \left( (3,0,-2)\ +\ 2( (-1,6,3)+(-5,-2,3)) \right)\ &amp;=\ 4\cdot\left( (3,0,-2)\ +\ 2\cdot (-6,4,6)\right) \\
&amp;=\ 4\cdot\left( (3,0,-2)\ +\ (-12,8,12) \right) \\
&amp;=\ 4\cdot (-9,8,10) \\
&amp;=\ (-36,32,40)
\endaligned
							
						</latex>
					             </math.display>
				           </solution.body>
            </solution>				
			      </approach>
		    </part.exercise>
		
		
