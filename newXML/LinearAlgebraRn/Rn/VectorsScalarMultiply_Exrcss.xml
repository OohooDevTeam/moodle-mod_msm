	  <caption>Scalar Multiplication of Vectors: Exercises</caption>
	
	  <exercise>
		    <problem>
         <problem.body>
			         <para>
               <para.body>Find the following scalar products of vectors:</para.body>
            </para>
		       </problem.body>
      </problem>
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
					                <math>
                        <latex>2\cdot (1,2)</latex>
                     </math>
				              </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <solution>
               <solution.body>
					             <para align="center">
                     <para.body>
						                  <math>
                           <latex>2\cdot (1,2) = (2\cdot 1,2\cdot 2) = (2,4)</latex>
                        </math>
					                </para.body>
                  </para>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
					                <math>
                        <latex>6\cdot (3,-2,5)</latex>
                     </math>
				              </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <solution>
               <solution.body>
					             <math.display>
						               <latex>6\cdot (3,-2,5) = (6\cdot 3,6\cdot(-2),6\cdot 5) = (18,-12,30)</latex>
					             </math.display>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
		
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
					                <math>
                        <latex>3\cdot (-12,17,25,-19)</latex>
                     </math>
				              </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <solution>
               <solution.body>
					             <math.display>
						               <latex>3\cdot (-12,17,25,-19) = (3\cdot (-12),3\cdot 17,3\cdot 25,3\cdot (-19)) = (-36,51,75,-57)</latex>
					             </math.display>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
		
