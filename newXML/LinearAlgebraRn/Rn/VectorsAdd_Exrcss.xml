		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
                     <math>
                        <latex>(3,-1,6) + (-1,2,-1)</latex>
                     </math>
                  </para.body>
               </para>
			         </problem.body>
         </problem>
			      <approach version="1">
				        <solution>
               <solution.body>
					             <math.array column="3">
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>(3,-1,6) + (-1,2,-1)</latex>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>(3+(-1),-1+2,6+(-1))</latex>
                           </math>
                        </cell>
                     </row>
                     <row rowspan="1">
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex/>
                           </math>
                        </cell>
                        <cell colspan="1" halign="center" valign="middle">
                           <math>
                              <latex>=</latex>
                           </math>
                        </cell>
                        <cell colspan="2" halign="center" valign="middle">
                           <math>
                              <latex>(2,1,5)</latex>
                           </math>
                        </cell>
                     </row>
                  </math.array>
				           </solution.body>
            </solution>
			      </approach>
		    </part.exercise>
		
