	  <exercise id="Exe_FindDistanceBetweenPoints">
		    <problem>
         <problem.body>
			         <para>
               <para.body>Find the distance between the following pairs of points:</para.body>
            </para>
		       </problem.body>
      </problem>
		    <part.exercise>
			      <problem>
            <problem.body>
				           <para>
                  <para.body>
					                <math>
                        <latex>P(4,0)</latex>
                     </math> and <math>
                        <latex>Q(0,4)</latex>
                     </math>
