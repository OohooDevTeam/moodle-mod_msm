                  <def type="Definition" id="Def_InvertibleLinearTransformation">
                     <caption>Invertible linear transformation</caption>
                     <associate type="Example">
                        <showme.pack.ref showmePackID="Exa_InvertibleLinearTrafo"/>
                        <info>
