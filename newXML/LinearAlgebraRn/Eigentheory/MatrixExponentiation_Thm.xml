<?xml version="1.0" encoding="UTF-8"?>
<theorem xmlns="Theorem"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         type="Theorem"
         id="Thm_MatrixExponentiation"
         xsi:schemaLocation="Theorem file:/C:/xampp/htdocs/moodle/mod/msm/NewSchemas/Theorem.xsd">
   <caption>Matrix exponentiation</caption>
   <associate type="Example">
      <showme.pack.ref showmePackID="Exa_MatrixPower"/>
      <info>
         <para>
            <para.body>An example of powering a diagonalizable matrix.</para.body>
         </para>
      </info>
   </associate>
   <statement.theorem>
      <para>
         <para.body>For an integer <math>
               <latex>r\geq 1</latex>
            </math> and a diagonalizable matrix <math>
               <latex>\Mtrx{A}</latex>
            </math> with <math>
               <latex>\Mtrx{D} = \Mtrx{C}^{-1} \Mtrx{A} \Mtrx{C}</latex>
            </math> diagonal,
			</para.body>
         <index.glossary>
            <term>matrix</term>
            <term>power</term>
            <info>
               <para>
                  <para.body>A method of computing powers <math>
                        <latex>\Mtrx{A}^r</latex>
                     </math> of a diagonalizable matrix <math>
                        <latex>\Mtrx{A}</latex>
                     </math>
                  </para.body>
               </para>
            </info>
         </index.glossary>
      </para>
      <math.array column="3">
         <row rowspan="1">
            <cell colspan="2" halign="center" valign="middle">
               <math>
                  <latex>\Mtrx{A}^r</latex>
               </math>
            </cell>
            <cell colspan="1" halign="center" valign="middle">
               <math>
                  <latex>=</latex>
               </math>
            </cell>
            <cell colspan="2" halign="center" valign="middle">
               <math>
                  <latex>\Mtrx{C} \Mtrx{D}^r \Mtrx{C}^{-1}</latex>
               </math>
            </cell>
         </row>
      </math.array>
   </statement.theorem>
   <proof>
      <proof.block>
         <para>
            <para.body>The equality <math>
                  <latex>\Mtrx{D} = \Mtrx{C}^{-1} \Mtrx{A} \Mtrx{C}</latex>
               </math> is equivalent to</para.body>
         </para>
         <math.array column="3">
            <row rowspan="1">
               <cell colspan="2" halign="center" valign="middle">
                  <math>
                     <latex>\Mtrx{A}</latex>
                  </math>
               </cell>
               <cell colspan="1" halign="center" valign="middle">
                  <math>
                     <latex>=</latex>
                  </math>
               </cell>
               <cell colspan="2" halign="center" valign="middle">
                  <math>
                     <latex>\Mtrx{C} \Mtrx{D} \Mtrx{C}^{-1}</latex>
                  </math>
               </cell>
            </row>
         </math.array>
         <para>
            <para.body>Therefore</para.body>
         </para>
         <math.array column="3">
            <row rowspan="1">
               <cell colspan="2" halign="center" valign="middle">
                  <math>
                     <latex>\Mtrx{A}^r</latex>
                  </math>
               </cell>
               <cell colspan="1" halign="center" valign="middle">
                  <math>
                     <latex>=</latex>
                  </math>
               </cell>
               <cell colspan="2" halign="center" valign="middle">
                  <math>
                     <latex>\left( \Mtrx{C} \Mtrx{D} \Mtrx{C}^{-1} \right)^r</latex>
                  </math>
               </cell>
            </row>
            <row rowspan="1">
               <cell colspan="2" halign="center" valign="middle"/>
               <cell colspan="1" halign="center" valign="middle">
                  <math>
                     <latex>=	</latex>
                  </math>
                  <companion>
                     <info>
                        <para>
                           <para.body>
                              <math>
                                 <latex>r</latex>
                              </math> factors</para.body>
                        </para>
                     </info>
                  </companion>
               </cell>
               <cell colspan="2" halign="center" valign="middle">
                  <math>
                     <latex>\left( \Mtrx{C} \Mtrx{D} \Mtrx{C}^{-1} \right) \left( \Mtrx{C} \Mtrx{D} \Mtrx{C}^{-1} \right)\ \cdots\ \left( \Mtrx{C} \Mtrx{D} \Mtrx{C}^{-1} \right)</latex>
                  </math>
               </cell>
            </row>
            <row rowspan="1">
               <cell colspan="2" halign="center" valign="middle"/>
               <cell colspan="1" halign="center" valign="middle">
                  <math>
                     <latex>=	</latex>
                  </math>
                  <companion>
                     <info>
                        <para>
                           <para.body>Here we use that the pairs <math>
                                 <latex>\Mtrx{C}^{-1} \Mtrx{C}</latex>
                              </math> cancel.</para.body>
                        </para>
                     </info>
                  </companion>
               </cell>
               <cell colspan="2" halign="center" valign="middle">
                  <math>
                     <latex>\Mtrx{C}\, \Mtrx{D}^r\, \Mtrx{C}^{-1}</latex>
                  </math>
               </cell>
            </row>
         </math.array>
         <para>
            <para.body>as claimed.</para.body>
         </para>
      </proof.block>
   </proof>
</theorem>
